<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:ui="using:FluentAvalonia.UI.Controls"
			 x:Class="SkEditor.Controls.BottomBarControl" Design.Width="1920">

	<UserControl.Styles>
		<Style Selector="Button">
			<Setter Property="Padding" Value="5,0,5,0"/>
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="CornerRadius" Value="0"/>
			<Setter Property="VerticalAlignment" Value="Stretch"/>
			<Setter Property="Foreground" Value="#ceffffff"/>
		</Style>
		<Style Selector="TextBlock">
			<Setter Property="VerticalAlignment" Value="Center"/>
			<Setter Property="Foreground" Value="#ceffffff"/>
		</Style>
		<Style Selector="ui|IconSourceElement">
			<Setter Property="VerticalAlignment" Value="Center"/>
			<Setter Property="Foreground" Value="#ceffffff"/>
			<Setter Property="Height" Value="16"/>
		</Style>
	</UserControl.Styles>
	
	<Border Height="25" Background="#03ffffff" BorderBrush="#25ffffff" BorderThickness="0,1,0,0">
		<Grid Name="MainGrid" ColumnDefinitions="auto,*,auto">
			<TextBlock Name="LogsText" Grid.Column="1" Width="750" HorizontalAlignment="Left" Text="" Margin="30,0,0,0"/>

			<StackPanel Grid.Column="2" Margin="0,0,5,0" Spacing="10" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
				<TextBlock x:Name="LineText" Text="{DynamicResource BottomBarLine}"/>
				<TextBlock x:Name="ColumnText" Text="{DynamicResource BottomBarColumn}"/>
			</StackPanel>
		</Grid>
	</Border>
</UserControl>
