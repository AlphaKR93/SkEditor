<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:ui="using:FluentAvalonia.UI.Controls"
			 x:Class="SkEditor.Controls.EnchantSelector">
	
	<Grid Width="280" ColumnDefinitions="*,auto,auto">
		<ComboBox Name="EnchantComboBox" Grid.Column="0" HorizontalAlignment="Stretch" Margin="0,0,5,0">
			<ComboBoxItem Content="Protection"/>
			<ComboBoxItem Content="Unbreaking"/>
			<ComboBoxItem Content="Sharpness"/>
		</ComboBox>
		<TextBox Watermark="Level" Grid.Column="1" Margin="5,0"/>
		<Button Width="30" Height="30" FontSize="18" Padding="0" Grid.Column="2" Margin="5,0,0,0">
			<Button.Content>
				<ui:SymbolIcon Symbol="Remove"/>
			</Button.Content>
		</Button>
	</Grid>
</UserControl>
